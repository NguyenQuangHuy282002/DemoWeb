<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}My shop!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
    {% block nav %}
    <!-- Nav tabs -->
    <ul class="nav nav-tabs|pills" id="navId" role="tablist">
        <li class="nav-item" role="presentation">
            <a href="{{path('homepage')}}" class="nav-link" data-bs-toggle="tab">Home</a>
        </li>
        <li class="nav-item">
            <a href="{{path('product_index')}}" class="nav-link active" data-bs-toggle="tab">Product</a>
        </li>
        <li class="nav-item" role="presentation">
            <a href="{{path('category_index')}}" class="nav-link" data-bs-toggle="tab">Category</a>
        </li>
        {% if app.user %}
        <li class="nav-item" role="presentation">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </li>
        {% else %}
        <li class="nav-item" role="presentation">
            <a href="{{path('app_login')}}" class="nav-link" data-bs-toggle="tab">Log in</a>
        </li>
        {% endif %}
        
    </ul>
     {% endblock %}
    
        {% block body %}{% endblock %}
    </body>
</html>
